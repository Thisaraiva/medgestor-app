{
  "name": "medgestor-backend",
  "version": "1.0.0",
  "description": "Application for managing medical appointments",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "node -e \"console.log('No build step required for pure JS backend')\"",
    "test": "cross-env NODE_ENV=test jest --config=.jest.config.js --detectOpenHandles",
    "test:unit": "cross-env NODE_OPTIONS='' NODE_ENV=test jest --config=.jest.config.js --testPathPattern=tests/unit --detectOpenHandles",
    "test:integration": "cross-env NODE_OPTIONS='' NODE_ENV=test jest --config=.jest.config.js --testPathPattern=tests/integration --detectOpenHandles",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo:all",
    "migrate:test": "cross-env NODE_ENV=test sequelize-cli db:migrate",
    "seed": "sequelize-cli db:seed:all",
    "seed:undo": "sequelize-cli db:seed:undo:all",
    "seed:test": "cross-env NODE_ENV=test sequelize-cli db:seed:all",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thisaraiva/medgestor-app.git"
  },
  "author": "Thiago de Freitas Saraiva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Thisaraiva/medgestor-app/issues"
  },
  "homepage": "https://github.com/Thisaraiva/medgestor-app#readme",
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {    
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.0.0"
  }
}
